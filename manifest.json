{
  "manifest_version": 3,
  "name": "JobFlow OS",
  "version": "1.0.0",
  "description": "Personal Job Search Operating System",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "sidePanel",
    "downloads",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*",
    "https://*.googleapis.com/*"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_title": "Open JobFlow Pilot"
  },
  "side_panel": {
    "default_path": "index.html?view=sidepanel"
  },
  "options_ui": {
    "page": "index.html?view=dashboard",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}